{
    "compilerOptions": {
        "module": "commonjs",
        "target": "es5",
        "noImplicitAny": false,
        "sourceMap": true,
        "emitDecoratorMetadata": true,
        "experimentalDecorators": true,
        "moduleResolution": "node",
        "outDir": "./.idea-out"
    },

    "awesomeTypescriptLoaderOptions": {
      "emitRequireType": true
    },

    "exclude": [
        "typings/browser.d.ts",
        "typings/browser",
        "node_modules"
    ],
    "compileOnSave": false,
    "buildOnSave": false
}
